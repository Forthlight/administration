<%= tinymce_assets %>
<div class="composer">
  <%= form_for(@blog) do |f| %>
    <%= tinymce %>

    <% if @blog.errors.any? %>
      <div class="error_messages">
        <h3>Submission failed</h3>
        <ul>
          <% for message in @blog.errors.full_messages %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <br>
    <% end %>

    <div class="row-fluid overhead">
      <div class="span6">
        <%= f.text_field :title, :required => true, :placeholder=>"Title" %>
      </div>

      <div class="span6 check-style">
        <div class="option-box">
          <%= f.check_box :published %>
          <%= f.label :published %>
          <i>(Should it be visible to users?)</i>
        </div>
      </div>
    </div>

    <div>
      <%= f.text_area :content, :class => "tinymce", size: '100x20' %>
    </div>

    <div class="row-fluid overhead">
      <div class="span2">
        <%= f.submit "Save", :class=>"mock-btn" %>
      </div>
      <div class="span10"></div>
    </div>
</div>
<% end %>
