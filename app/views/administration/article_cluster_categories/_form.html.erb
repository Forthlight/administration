<%= form_for(@cluster, url: @path, html: { method: @method }) do |f| %>
  <% if @cluster.errors.any? %>
    <div class="error_messages">
      <h3>Submission failed</h3>
      <ul>
        <% for message in @cluster.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, value: restore_whitespace(@cluster.title) %>
  </div>

  <div>
    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>
  
<% end %>