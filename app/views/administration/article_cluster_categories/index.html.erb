<div class="row-fluid">
	<%= render :file => "#{Administration::Engine.root}/app/views/shared/_adminaside.html.erb" %>

	<div class="span9 ">
		<div class="admin-head"><h3>Clusters</h3></div>
		<div class="overview">
			<%= link_to "New cluster", administration.new_article_cluster_category_path,:class=>"mock-btn" %>
			<div class="row-fluid"> 
				<% @clusters.each do |cluster| %>
					<div class="index-list-style">
						<h3><%= restore_whitespace(cluster.title) %></h3>
						<span><%= cluster.description %></span>
						<span><%=link_to "Edit", administration.edit_article_cluster_category_path(cluster.id),:class=>"mock-btn" %></span>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
