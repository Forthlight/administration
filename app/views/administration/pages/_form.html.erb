<%= tinymce_assets %>
<div class="composer">
  <%= form_for(@page) do |f| %>
    <%= tinymce %>

    <% if @page.errors.any? %>
      <div class="error_messages">
        <h3>Submission failed</h3>
        <ul>
          <% for message in @page.errors.full_messages %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <br>
    <% end %>

    <div class="row-fluid overhead">
      <div class="span6">
        <%= f.text_field :title, :required => true, :placeholder=>"Title" %>
      </div>

      <div class="span6 check-style">
          <%= f.check_box :main %>
          <%= f.label :main, "Show in main menu?" %>
          <i>(There are room for 3 pages in the main menu)</i>
      </div>
    </div>

    <div>
      <%= f.text_area :content, :class => "tinymce", size: '100x20' %>
    </div>

    <div class="row-fluid overhead">
      <div class="span2">
        <%= f.submit "Save", :class=>"mock-btn" %>
      </div>
      <div class="span10"></div>
    </div>
</div>
<% end %>
