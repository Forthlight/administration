<div class="row-fluid">
  <div class="span9">
    <div class="admin-head">
     <h1>Edit <%= @page.title %></h1>
   </div>
   <div class="blog-showcase">
     <%= render 'form' %>
   </div>
 </div>
 <div class="span3">
  <div class="admin-head hidden-phone">
    <h1>Administration</h1>
  </div>
  <div class="admin-info hidden-phone">
    <ul>
      <% if admin_signed_in? %>
      <li><%= link_to 'Delete This page', @page, :method => :delete %></li>

      <%= render :file => "#{Administration::Engine.root}/app/views/shared/_shortcuts.html.erb" %>
      <% else %>
      something useful
      <% end %>
    </ul>
  </div>
</div>
</div>
