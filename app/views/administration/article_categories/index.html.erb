<div class="row-fluid">
	<%= render :file => "#{Administration::Engine.root}/app/views/shared/_adminaside.html.erb" %>

	<div class="span9 ">
		<div class="admin-head"><h3>Categories</h3></div>
		<div class="overview">
			<%= link_to "New category", administration.new_article_category_path,:class=>"mock-btn" %>
			<div class="row-fluid"> 
				<% @categories.each do |category| %>
					<div class="index-list-style">
						<h3><%= restore_whitespace(category.title) %></h3>
						<span><%= category.description %></span>
						<span><%=link_to "Edit", administration.edit_article_category_path(category.id),:class=>"mock-btn" %></span>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
