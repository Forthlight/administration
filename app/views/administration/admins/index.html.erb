<div class="row-fluid">
<%= render :file => "#{Administration::Engine.root}/app/views/shared/_adminaside.html.erb" %>

  <div class="span9">
    <div class="row-fluid"> 
      <div class="admin-head">
        <h3>Administrators</h3>
      </div>
      <div class="overview">
        <%= link_to "New administrator", administration.new_admin_path,:class=>"mock-btn" %>
        <table class="responsive-table">
          <thead class="table-head">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @admins.each do |admin| %>
            <tr>
              <td scope="row" data-title="Name"><%= admin.first_name + " " + admin.last_name %></td>      
              <td data-title="Email"><%= admin.email %></td>
              <td>
                <%= link_to "Edit", administration.edit_admin_path(admin.id), :class=>"mock-btn" %>
                <%= link_to "Delete", administration.admin_path(admin.id), data: { confirm: "Permanently remove this admin?" }, method: :delete, :class=>"mock-btn del" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @admins, :remote => false %>
      </div>
    </div>
  </div>
</div>