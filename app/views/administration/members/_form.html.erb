<%= form_for(@member, url: administration.members_path, html: { method: :post }) do |f| %>
  <% if @member.errors.any? %>
    <div class="error_messages">
      <h3>Submission failed</h3>
      <ul>
        <% for message in @member.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>
  
<% end %>